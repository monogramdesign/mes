{
	"name": "menv",
	"description": "Schema for an identity service for a SaaS with a REST API",
	"license": "UNLICENSED",
	"dependencies": {
		"@hapi/hapi": "^20.2.1",
		"@hapi/vision": "^6.1.0",
		"@prisma/client": "^3.14.0",
		"crypto-js": "^4.1.1",
		"jsonwebtoken": "^8.5.1",
		"module-alias": "^2.2.2"
	},
	"devDependencies": {
		"@monogram/prettier-config": "^0.0.8",
		"@types/faker": "5.5.9",
		"@types/hapi__hapi": "^20.0.10",
		"@types/hapi__vision": "^5.5.3",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/node": "^17.0.17",
		"@vercel/node": "1.12.1",
		"faker": "5.5.3",
		"nodemon": "^2.0.15",
		"npm-run-all": "^4.1.5",
		"prisma": "^3.14.0",
		"ts-node": "10.4.0",
		"typescript": "^4.5.5"
	},
	"prisma": {
		"seed": "ts-node ./prisma/seed.ts"
	},
	"_moduleAliases": {
		"@lib": "dist/lib"
	},
	"prettier": "@monogram/prettier-config",
	"scripts": {
		"init": "prisma db push && prisma db seed",
		"dev:tsc": "tsc --watch -p .",
		"dev:html": "cp -rf ./templates ./dist/",
		"dev:serve": "nodemon -e js -w dist dist/server",
		"dev": "run-p dev:*",
		"gcp-build": "tsc -p .",
		"deploy": "gcloud app deploy",
		"start": "node ./dist/server",
		"prisma:push": "prisma db push",
		"prisma:build": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate"
	}
}
